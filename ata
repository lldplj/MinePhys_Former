import pandas as pd
import os
from MinePhys_Former.config import Config
import torch
import torch.nn as nn
import torch.nn.functional as F
import math


class AdaptiveTemporalAlignment(nn.Module):
    def __init__(self, input_dim, d_model, seq_len, dropout=0.1):
        super(AdaptiveTemporalAlignment, self).__init__()
        self.seq_len = seq_len
        self.input_proj = nn.Linear(input_dim, d_model)
        self.offset_predictor = nn.Sequential(
            nn.Linear(d_model, d_model // 2),
            nn.Tanh(),
            nn.Linear(d_model // 2, 1),
            nn.Tanh()
        )
        self.pos_encoder = PositionalEncoding(d_model, max_len=seq_len + 10)
        self.dropout = nn.Dropout(dropout)
        self.norm = nn.LayerNorm(d_model)

    def _fine_calibration_logic(self, x_embed):
        batch_size, seq_len, dim = x_embed.shape
        offsets = self.offset_predictor(x_embed).squeeze(-1)
        base_grid = torch.arange(seq_len, device=x_embed.device).float()
        sampling_positions = base_grid.unsqueeze(0).expand(batch_size, -1) + offsets
        norm_grid = 2.0 * sampling_positions / (seq_len - 1) - 1.0
        norm_grid = norm_grid.unsqueeze(-1).unsqueeze(1)
        x_permuted = x_embed.permute(0, 2, 1).unsqueeze(2)

        zeros = torch.zeros_like(norm_grid)
        grid = torch.cat([norm_grid, zeros], dim=-1)
        aligned_x = F.grid_sample(x_permuted, grid, mode='bilinear', align_corners=True, padding_mode='border')

        return aligned_x.squeeze(2).permute(0, 2, 1)

    def forward(self, x_coarse_aligned):
        x_embed = self.input_proj(x_coarse_aligned.float())
        x_fine = self._fine_calibration_logic(x_embed)
        x_pe = self.pos_encoder(x_fine)
        return self.norm(self.dropout(x_pe))

    def coarse_alignment_to_csv(raw_data_path, aligned_data_path, target_freq):
        if not os.path.exists(raw_data_path):
            print(f"Error: Raw data file not found at {raw_data_path}")
            print("Please ensure the raw data CSV is available before running preprocessing.")
            return
        try:
            df_raw = pd.read_csv(raw_data_path, parse_dates=['timestamp'], index_col='timestamp')
        except KeyError:
            print("Error: The raw CSV must contain a column named 'timestamp'.")
            return
        except Exception as e:
            print(f"Error reading raw data file: {e}")
            return
        min_time = df_raw.index.min()
        max_time = df_raw.index.max()
        print(f"Raw data loaded. Time cycle: {min_time} to {max_time}")
        print(f"Total original points: {len(df_raw)}")
        df_resampled = df_raw.resample(target_freq).nearest().ffill().bfill()
        os.makedirs(os.path.dirname(aligned_data_path), exist_ok=True)
        df_resampled.reset_index().to_csv(aligned_data_path, index=False)
        print(f"\nCoarse Alignment finished (Interval: {target_freq}).")
        print(f"Aligned data saved to {aligned_data_path}")
        print(f"Total aligned points: {len(df_resampled)}")


class PositionalEncoding(nn.Module):
    def __init__(self, d_model, max_len=5000):
        super(PositionalEncoding, self).__init__()
        pe = torch.zeros(max_len, d_model)
        position = torch.arange(0, max_len, dtype=torch.float).unsqueeze(1)
        div_term = torch.exp(torch.arange(0, d_model, 2).float() * (-math.log(10000.0) / d_model))
        pe[:, 0::2] = torch.sin(position * div_term)
        pe[:, 1::2] = torch.cos(position * div_term)
        pe = pe.unsqueeze(0)
        self.register_buffer('pe', pe)

    def forward(self, x):
        return x + self.pe[:, :x.size(1), :]
